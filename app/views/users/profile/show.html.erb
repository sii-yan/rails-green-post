<section class="container UserSection">
  <h2>設定</h2>

  <div class="UserContainer">
    <%= render "/shared/users/side_navigation" %>

    <div class="AccountInformation">
      <%= render "/shared/users/tab_navigation" %>

      <div class="AccountInformation__header">
        <h3>プロフィール</h3>

        <%= link_to edit_users_profile_path, class: "AccountInformation__link" do %>
          <%= image_tag "icons/edit-pen.svg", alt: "編集アイコン" %>
          編集
        <% end %>
      </div>

      <div class="AccountInformation__input-group">
        <%= label_tag :image, "アイコン画像", class: "AccountInformation__label" %>

        <p class="AccountInformation__value AccountInformation__value--image">
          <%= image_tag user_icon(current_user), alt: 'アイコン画像' %>
        </p>
      </div>

      <div class="AccountInformation__input-group">
        <%= label_tag :name, "名前", class: "AccountInformation__label" %>

        <p class="AccountInformation__value">
          <%= current_user.name %>
        </p>
      </div>

      <div class="AccountInformation__input-group">
        <%= label_tag :bio, "自己紹介", class: "AccountInformation__label" %>

        <p class="AccountInformation__value">
          <%= current_user.bio %>
        </p>
      </div>
    </div>
  </div>
</section>