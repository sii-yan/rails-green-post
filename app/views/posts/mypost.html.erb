<section class="container MyPostsContainer">
  <h2 class="PostSectionTitle">
    私の投稿一覧
  </h2>

  <div class="table-responsive">
    <table class="table align-middle MyPostsTable">
      <thead>
        <tr>
          <th>写真</th>
          <th>タイトル</th>
          <th>コメント</th>
          <th>作成日</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td>
              <%= link_to image_tag(post_image(post)), post_path(post) %>
            </td>

            <td>
              <%= link_to post.title, post_path(post) %>
            </td>

            <td>
              <%= post.content %>
            </td>

            <td class="text-nowrap">
              <%= post.created_at.to_formatted_s(:datetime_jp) %>
            </td>

            <td>
              <%= link_to "削除", post, data: { turbo_method: "delete", turbo_confirm: "よろしければ「削除」ボタンを押してください。" }, class: "btn btn-outline-dark" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>