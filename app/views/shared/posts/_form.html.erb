<%= form_with model: @post, class: "Form PostsForm" do |f| %>
  <div class="PostsForm__input-group">
    <%= f.label :title, "タイトル", class: "form-label PostsForm__label Form__label--required" %>

    <div class="PostsForm__input">
      <%= f.text_field :title, class: "form-control", placeholder: "タイトル" %>
      <%= render "shared/error_message", object: @post, key: "title" %>
    </div>
  </div>

  <div class="PostsForm__input-group">
    <%= f.label :content, "コメント", class: "form-label PostsForm__label Form__label--required" %>

    <div class="PostsForm__input">
      <%= f.text_area :content, rows: 5, class: "form-control", placeholder: "素敵なお花が咲いていました！" %>
      <%= render "shared/error_message", object: @post, key: "content" %>
    </div>
  </div>

  <div class="PostsForm__input-group FileUploadArea">
    <%= f.label :image, "写真", class: "PostsForm__label" %>

    <p class=" PostsForm__input FileUploadArea__input-group">
      <%= f.label :image, "写真", class: "FileUploadArea__label" do %>
        <span>画像アップロード</span>
        <%= f.file_field :image %>
      <% end %>
    </p>
  </div>

  <%= f.submit "投稿する", class: 'btn PostsForm__button PostsForm__button--submit' %>
<% end %>

<%= link_to "キャンセル", :back, class: 'btn PostsForm__button PostsForm__button--cancel' %>