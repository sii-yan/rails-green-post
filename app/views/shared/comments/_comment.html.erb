<div class="CommentList__item">
  <p><%= simple_format(comment.comment) %></p>

  <div class="CommentList__bottom-line">
    <div class="CommentList__user-profile">
      <%= render partial: "shared/user_profile", locals: { user: comment.user } %>
    </div>

    <div class="CommentList__meta">
      <span><%= comment.created_at.to_formatted_s(:datetime_jp) %></span>
      <span><%= link_to "削除", comment, data: { turbo_method: "delete", turbo_confirm: "削除してよろしいですか？" } %></span>
    </div>
  </div>
</div>
